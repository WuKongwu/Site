    <script>
        var flag = "true";
        function Paging(pageNo) {
            var key = $("#key_val").val();
            var url = $("body").data("website") + "paper/SearchListPaging";
            if (flag == "true") {
                flag = "false";

                $.ajax({
                    url: url,
                    type: "POST",
                    dataType: "html",
                    cache: false,
                    headers: { "CaChe-Control": "no-cache" },
                    data: { pageNo: pageNo, key: key },
                    success: function (data) {
                        flag = "true";
                        $(".paper-detail ul.detail-ul").html(data);
                    },
                    error: function (e) { flag = "true"; }
                })
            }
        }



        var count = $(".paper-detail ul.detail-ul").data("count");
        if (count > 0) {
            var pageCount = Math.ceil(count / 9);
            $('#pagination-demo').twbsPagination({
                totalPages: pageCount,
                visiblePages: 5,
                first: "首页",
                last: "末页",
                prev: "上一页",
                next: "下一页",
                initiateStartPageClick: false,
                onPageClick: function (event, page) {
                    Paging(page);
                }
            });
        }

    </script>
