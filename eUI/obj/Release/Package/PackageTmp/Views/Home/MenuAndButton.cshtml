@{
    Layout = null;
}
@Styles.Render(Files.CssFiles.easyUI)
@Styles.Render(Files.CssFiles.easyUIicon)
@Scripts.Render(Files.JsFiles.jQuery)
@Scripts.Render(Files.JsFiles.easyUI)

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>MenuAndButton</title>

    <script type="text/javascript">
        $(function () {
            $('#mmsplit').menu({
                disabled: true
            });
            $('#mmsplit').menu('show', {
                left: 200,
                top: 200
            });

            $('#btnJs').linkbutton({
                //plain: true,
                width: 100,
                height: 60,
                selected: true,
                toggle: true,
                iconAlign: 'left',
                iconCls: 'icon-search',
                onClick: function () {
                    alert(JSON.stringify($('#btnJs').linkbutton('options')));
                }
            });

            $("#menuButton").menu({
                onClick: function (item) {
                    alert(JSON.stringify(item));
                }
            });

            $("#btnswitch").switchbutton({
                onChange: function (item) {
                    alert(item);
                }
            });

            $("#btnswitch").switchbutton('setValue', 111);

        })
    </script>
</head>
<body>
    @*开关按钮*@
    <input class="easyui-switchbutton" checked>
    <input id="btnswitchYN" class="easyui-switchbutton" data-options="onText:'Yes',offText:'No'">

    <a href="javascript:void(0)" id="sbswitchbutton" onclick="javascript:alert('ok')">Ok</a>
    <div id="btnswitch" style="width: 100px;"> 

    </div>


    @*分割菜单*@
    <a href="javascript:void(0)" id="sb" class="easyui-splitbutton"
        data-options="menu:'#mm',iconCls:'icon-ok'" onclick="javascript:alert('ok')">Ok</a>

    <div id="mmsplit" style="width: 100px;">
        <div data-options="iconCls:'icon-ok'">Ok</div>
        <div data-options="iconCls:'icon-cancel'">Cancel</div>
    </div>

    @*菜单按钮*@
    <a href="javascript:void(0)" id="mb" class="easyui-menubutton"
        data-options="menu:'#menuButton',iconCls:'icon-edit',hasDownArrow:true">Edit</a>
    <div id="menuButton" style="width: 150px;">
        <div data-options="iconCls:'icon-undo'">Undo</div>
        <div data-options="iconCls:'icon-redo'">Redo</div>
        <div class="menu-sep"></div>
        <div>Cut</div>
        <div>Copy</div>
        <div>Paste</div>
        <div class="menu-sep"></div>
        <div data-options="iconCls:'icon-remove'">Delete</div>
        <div>Select All</div>
    </div>

    <a id="btnJs" href="#">easyuiJs</a>

    <a href="#" class="easyui-linkbutton" data-options="iconCls:'icon-search'"
        onclick="javascript:alert('easyui')">easyui</a>

    <a id="btn" href="#" class="easyui-linkbutton" data-options="iconCls:'icon-search'">easyui</a>

    <div id="mm" class="easyui-menu" style="width: 120px;">
        <div>New</div>
        <div>
            <span>Open</span>
            <div style="width: 150px;">
                <div><b>Word</b></div>
                <div>Excel</div>
                <div>PowerPoint</div>
            </div>
        </div>
        <div data-options="iconCls:'icon-save'">Save</div>
        <div class="menu-sep"></div>
        <div>Exit</div>
    </div>
</body>
</html>
