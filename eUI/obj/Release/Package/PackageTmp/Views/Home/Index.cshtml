    <script type="text/javascript">
        function qq(value, name) {
            alert(value + ":" + name)
        }
        $(function () {
            $('#ss2').searchbox({
                searcher: function (value, name) {
                    alert(value + "," + name)
                },
                menu: '#mm2',
                prompt: '请输入值',
                height: 100,
                width: 400
            });

            $("#btnProgressbar").click(function () {
                var value = $('#ppp').progressbar('getValue');
                if (value < 100) {
                    value += Math.floor(Math.random() * 10);
                    $('#ppp').progressbar('setValue', value);
                }
            });

            $('#ppp2').progressbar({
                value: 80,
                text: '百分之{value}'
            });

            $('#ddtooltip').tooltip({
                position: 'right',
                content: '<span style="color:#fff">This is the tooltip message.</span>',
                onShow: function () {
                    $(this).tooltip('tip').css({
                        backgroundColor: '#666',
                        borderColor: '#666'
                    });
                },
                trackMouse:true
            });

        });


    </script>

