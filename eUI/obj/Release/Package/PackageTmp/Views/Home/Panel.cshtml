@{
    Layout = null;
}
@Styles.Render(Files.CssFiles.easyUI)
@Styles.Render(Files.CssFiles.easyUIicon)
@Scripts.Render(Files.JsFiles.jQuery)
@Scripts.Render(Files.JsFiles.easyUI)

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Panel</title>

    <script type="text/javascript">
        $(function () {
            $('#panel2').panel({
                width: 500,
                height: 150,
                title: 'My Panel',
                href: '/Home/PanelTest',
                closable: true,
                minimizable: true,
                //footer:'panelfooter',
                //header:'panelheader',
                loadingMessage: '正在加载中...',
                openAnimation: 'slide',
                tools: [{
                    iconCls: 'icon-add',
                    handler: function () { alert('new') }
                }, {
                    iconCls: 'icon-save',
                    handler: function () { alert('save') }
                }],
                onLoad: function () {
                    //alert('loaded successfully');
                },
                extractor: function (data) {
                    var pattern = /<body[^>]*>((.|[\n\r])*)<\/body>/im;
                    var matches = pattern.exec(data);
                    if (matches) {
                        return matches[1];	// 仅提取主体内容
                    } else {
                        return data;
                    }
                }


            });

            //没有效果
            $("#btnPanelMove").click(function () {
                $('#panel2').panel('move', {
                    left: 500,
                    top: 500
                });
            });

            //Tab选项卡
            $('#ttTabJs').tabs({
                border: true,
                toolPosition: 'left',
                tabPosition: 'top',
                //justified: true,
                narrow: true,
                pill: true,
                tools: [{
                    iconCls: 'icon-add',
                    handler: function () {
                        alert('添加')
                    }
                }, {
                    iconCls: 'icon-save',
                    handler: function () {
                        alert('保存')
                    }
                }]
            });
            // add a new tab panel    
            $('#ttTabJs').tabs('add', {
                title: 'Tab1',
                content: 'Tab Body',
                closable: true,
                selected: true,
                collapsible: true,
                tools: [{
                    iconCls: 'icon-mini-refresh',
                    handler: function () {
                        alert('refresh');
                    }
                }]
            });

            $('#ttTabJs').tabs('add', {
                href: '/Home/PanelTest',
                title: 'Tab ABC Test',
                content: 'Tab Body',
                //closable: true,
                //collapsible: true,
                closable: true,  //没效果
                //disabled:true,
                selected: false,
                tools: [{
                    iconCls: 'icon-mini-refresh',
                    handler: function () {
                        alert('refresh');
                    }
                }]
            });

        });
    </script>
</head>
<body>
    <div>
        @Html.ActionLink("页面布局", "/Layout",null, new { target = "_blank" })

        @*布局*@
        <div id="cc" class="easyui-layout" style="width: 600px; height: 400px;">
            <div data-options="region:'north',title:'North Title',split:true" style="height: 100px;"></div>
            @*<div data-options="region:'south',title:'South Title',split:true" style="height: 100px;"></div>*@
            @*<div data-options="region:'east',iconCls:'icon-reload',title:'East',split:true" style="width: 100px;"></div>*@
            <div data-options="region:'west',title:'West',split:true" style="width: 100px;"></div>
            <div data-options="region:'center',title:'center title'" style="padding: 5px; background: #eee;"></div>
        </div>

        @*分类*@
        <div id="aa" class="easyui-accordion" style="width: 300px; height: 200px;">
            <div title="Title1" data-options="iconCls:'icon-save'" style="overflow: auto; padding: 10px;">
                <h3 style="color: #0099FF;">Accordion for jQuery</h3>
                <p>
                    Accordion is a part of easyui framework for jQuery.     
        It lets you define your accordion component on web page more easily.
                </p>
            </div>
            <div title="Title2" data-options="iconCls:'icon-reload',selected:true" style="padding: 10px;">
                content2    
            </div>
            <div title="Title3">
                content3    
            </div>
        </div>

        @*Tab选项卡*@
        <div id="ttTabJs" class="easyui-tabs" style="width: 500px; height: 250px;">
        </div>

        <div id="ttTab" class="easyui-tabs" style="width: 500px; height: 250px;">
            <div title="Tab1" data-options="closable:true" style="padding: 20px; display: none;">
                tab1    
            </div>
            <div title="Tab2" data-options="closable:true" style="overflow: auto; padding: 20px; display: none;">
                tab2    
            </div>
            <div title="Tab3" data-options="iconCls:'icon-reload',closable:true" style="padding: 20px; display: none;">
                tab3    
            </div>
        </div>

        @*面板*@
        <input id="btnPanelMove" type="button" value="移动面板" />

        <div id="panel" class="easyui-panel" title="My Panel"
            style="width: 500px; height: 150px; padding: 10px; background: #fafafa;"
            data-options="iconCls:'icon-save',closable:true,    
                collapsible:true,minimizable:true,maximizable:true">
            <p>panel content.</p>
            <p>panel content.</p>
        </div>

        <div id="panel2" style="padding: 10px;">
            <p>panel content2.</p>
            <p>panel content2.</p>
        </div>
    </div>
</body>
</html>
